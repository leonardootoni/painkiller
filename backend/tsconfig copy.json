{
  "compilerOptions": {
    "strict": true,
    "rootDir": "./",
    "outDir": "./build",
    "allowJs": false,
    "sourceMap": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": ["./typings", "node_modules/@types/" ],
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
  //"files": ["./typings/express/index.d.ts"]// ->> turn on --files in nodemon
}
